@model IEnumerable<KeepWriting.Models.Capitulo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Criar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conteudo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conteudo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Editar", new { id=item.IdCapitulo }) |
            @Html.ActionLink("Details", "Detalhes", new { id=item.IdCapitulo }) |
            @Html.ActionLink("Delete", "Excluir", new { id=item.IdCapitulo })
        </td>
    </tr>
}

</table>
