@model KeepWriting.ViewModels.EventoViewModel

@{
    ViewBag.Title = "Criar um evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar</h2>

@using (Html.BeginForm("Criar", "EventoLiterario", FormMethod.Post, new { enctype = "multipart/form-data" })) 
